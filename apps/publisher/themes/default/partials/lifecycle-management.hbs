<h5>Manage Lifecycles</h5>
<div>
    <form class="form-inline">
       <div class="form-group">
         <select id="lcPossibleLifecyclesSelect">
             {{#each assets.possibleLifecycles}}
             <option>{{this}}</option>
             {{/each}}
         </select>
       </div>
       <div class="form-group">
         <div class="">
             <a id="lcMngAttachBtn" class="btn btn-default" href="#"><i class="fw fw-add"></i> Attach Lifecycle</a>
         </div>
       </div>
    </form>

    <!-- List available Lifecycles -->
    <div>
        <h6>Attached Lifecycles</h5>
        <ul>
          {{#each assets.availableLifecycles}}
          <li>
            <div class="">
                <label>{{name}}</label><a href="#"><i class="fw fw-delete"></i> Remove</a>
            </div>
          </li>
          {{/each}}
        </ul>
    </div>
</div>
